<!-- app/views/castles/index.html.erb -->

<h1><%= @castle.name %></h1>

<% if @castle.user.id.equal? current_user.id %>
 <!-- My castle -->
  <h2>Buildings</h2>
  <div class="buildings">

    <% @castle.ordered_buildings.each do |building| %>
      <%= render partial: 'building', locals: { building: building } %>
    <% end %>
  </div>

  <div>
    <p><%= link_to 'Castles', castles_path %></p>
  </div>
<% else %>
  <!-- Not my castle -->
<% end %>
