<div class="bg-slate-100 h-screen">
  <div class="bg-slate-200 border border-slate-300">
    <div class="flex justify-center py-1">
      <h1 class="font-bold text-sm">My castles</h1>
    </div>
  </div>

  <div class="flex-1 overflow-y-auto divide-y divide-solid divide-slate-300">
    <% @castles.each do |castle| %>
      <div>
        <%= link_to castle.name, castle %>
      </div>
    <% end %>
  </div>
</div>
