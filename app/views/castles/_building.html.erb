<!-- app/views/castles/_building.html.erb -->
<% @building_type = BuildingType.find_by_id(building.type_id) %>

<div id="<%= building.type_id %>" class="building">
  <div class="wrapper-row justify-space-between">
    <div class="details wrapper-column">
      <div class="description">
        <%= image_tag('building.png', alt: @building_type.name, width: '150px') %>
        <h3><%= @building_type.name %></h3>
        <p><%= @building_type.details %></p>
      </div>

      <%= render partial: 'action_buttons', locals: { building: building } %>
    
    </div>
    <div class="requirements">
      
      <%= render partial: 'req_resources', locals: { building: building } %>

      <div class="req-time">
        <p><%= seconds_to_time(building.time_requirement.to_i) %></p>
      </div>
    </div>
  </div>
</div>
