<!DOCTYPE html>
<html>
  <head>
    <title>Fcs</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="container">
      <% if flash.any? %>
        <div>
          <% if flash.notice.present? %>
            <p><%= flash.notice %></p>
          <% end %>

          <% if flash.alert.present? %>
            <p><%= flash.alert %></p>
          <% end %>
        </div>
      <% end %>
      <div>
        <% if user_signed_in? %>
          <p>Welcome, <%= current_user.name %>!</p>
          <p><%= link_to 'exit', destroy_user_session_path, data: { turbo_method: :delete } %></p>
        <% else %>
          <p>Feel free to <%= link_to 'sign up', new_user_registration_path %> or <%= link_to 'sign in', new_user_session_path %>.</p>
        <% end %>
      </div>

      <%= yield %>
    </div>
  </body>
</html>
